*,
*::after,
*::before 
    margin: 0
    padding: 0
    box-sizing: inherit
    list-style-type: none


html 
  // This defines what 1rem is
  font-size: 62.5% //1 rem = 10px 10px/16px = 62.5%

  +respond(tab-landscape)  // width < 1200?
    font-size: 56.25% //1 rem = 9px, 9/16 = 50%
    

  +respond(tab-portrait)  // width < 900?
    font-size: 50% //1 rem = 8px, 8/16 = 50%
    
    
  +respond(large-desktop) 
    font-size: 75% //1rem = 12, 12/16
    


body 
    box-sizing: border-box

    +respond(tab-portrait) 
        padding: 0
    


::selection 
    background-color: color-primary
    color: color-white


body 
  font-family: "Open Sans", sans-serif
  font-size: 1.4rem
  font-weight: 400
  line-height: 1.7
  color: #2f2f2f
  background: #f6f3f2
  +respond(mobile)
    font-size: 1.6rem

