h1, h2, h3 
	font-family: "Exo 2", sans-serif
	text-transform: uppercase
	font-weight: 500
	margin: 0
	
h1 
	font-size: 3rem
	font-weight: 500
	
.uppercase
	text-transform: uppercase
	
p
	font-size: 1.4rem
	margin: 1rem 0
	
blockquote {
  background: #f9f9f9;
  border-left: 10px solid #ccc;
  margin: 3rem 0
  padding: 1.5rem 10px;
  quotes: "\201C""\201D""\2018""\2019";
}
blockquote:before {
  color: #ccc;
  content: open-quote;
  font-size: 4em;
  line-height: 0.1em;
  margin-right: 0.25em;
  vertical-align: -0.4em;
}
blockquote p {
  display: inline;
}
	
	